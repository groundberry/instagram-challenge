<% if @images.any? %>
  <% @images.each do |image| %>
    <%= link_to image.description, image_path(image) %>
    <%= link_to image_tag("http://cdn.pcwallart.com/images/morning-sunrise-city-wallpaper-2.jpg"), image_path(image) %>
    <%= link_to "Edit #{image.description}", edit_image_path(image) %>
  <% end %>
<% else %>
  <h1>No images yet</h1>
<% end %>

<a href="/images/new">Add an image</a>
